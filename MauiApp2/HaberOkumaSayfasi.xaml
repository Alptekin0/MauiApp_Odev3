<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiApp2.HaberOkumaSayfasi"
    Title="Haber Detay"
    BackgroundColor="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" BackgroundColor="WhiteSmoke" Padding="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button 
                Grid.Column="0"
                Text="Geri"
                ImageSource="back.png"
                BackgroundColor="Transparent"
                TextColor="#007AFF"
                Clicked="OnBackButtonClicked"
                
                />

            <Label 
                Grid.Column="1"
                TextColor="DarkBlue"
                Text="Haber Detay"
                FontAttributes="Bold"
                FontSize="Medium"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                />
        </Grid>
        <ScrollView Grid.Row="1">
            <StackLayout Padding="10" Spacing="10">
                <Image Source="{Binding Enclosure.Link}" 
                       Aspect="AspectFill" 
                       HeightRequest="350"
                       WidthRequest="600"    />

                <Label Text="{Binding Title}" 
                       FontAttributes="Bold" 
                       FontSize="Large" 
                       LineBreakMode="WordWrap" 
                       />
                <Label Text="{Binding Author}" 
                       FontAttributes="Italic" 
                       FontSize="Medium" 
                       LineBreakMode="WordWrap"  />

                <Label Text="{Binding PubDate}" 
                       FontSize="Small" 
                       LineBreakMode="WordWrap" />

                <Label Text="{Binding PlainDescription}" 
                       FontSize="Medium" 
                       TextColor="Black"
                       LineBreakMode="WordWrap"/> 

                <Button Text="Haberi Ä°ncele" 
                        BackgroundColor="#6A5ACD"
                        TextColor="White"
                        Clicked="OnButtonClicked"
                        />
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
